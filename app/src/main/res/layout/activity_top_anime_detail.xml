<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopAnime.topAnimeDetail"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/margin_medium"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageButton
                    android:id="@+id/back2t"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back_white"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Detail Anime"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFF"
                    android:fontFamily="@font/chlorinr"
                    android:textSize="@dimen/title_small_size"/>

                <ToggleButton
                    android:id="@+id/toggle3"
                    android:layout_width="@dimen/medium_action_icon"
                    android:layout_height="@dimen/medium_action_icon"
                    android:layout_marginRight="@dimen/title_small_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_fav"
                    android:textOn=""
                    android:textOff=""/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tittleDt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:fontFamily="@font/helvetica_neu_bold"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="@dimen/text_big_size"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageDt"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:layout_margin="@dimen/margin_medium"
                        android:scaleType="fitXY"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="type"
                            android:layout_marginTop="@dimen/margin_small"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="@dimen/text_small_size"
                            android:textColor="@color/orange"/>

                        <TextView
                            android:id="@+id/typeDt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TV"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="@dimen/text_big_size"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="episodes"
                            android:layout_marginTop="@dimen/text_small_size"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="@dimen/text_small_size"
                            android:textColor="@color/orange"/>

                        <TextView
                            android:id="@+id/episodesDt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="unknown"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="@dimen/text_big_size"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="members"
                            android:layout_marginTop="@dimen/text_small_size"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="@dimen/text_small_size"
                            android:textColor="@color/orange"/>

                        <TextView
                            android:id="@+id/membersDt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="234343"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="@dimen/text_big_size"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_web_orange"
                                android:layout_alignParentBottom="true"
                                android:id="@+id/imgw5"/>

                            <TextView
                                android:id="@+id/webDt"
                                android:layout_toRightOf="@id/imgw5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="go to Web >>"
                                android:layout_marginTop="@dimen/text_small_size"
                                android:fontFamily="@font/helveticaneue_medium"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/text_big_size"
                                android:gravity="bottom"
                                android:layout_alignParentBottom="true"
                                />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:background="@drawable/backorg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Synopsis"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_medium_size"
                        android:layout_margin="@dimen/margin_mid_extra_small"
                        android:fontFamily="@font/helvetica_neu_bold"
                        android:textColor="#FFFF"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/synopDt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_medium_size"
                    android:layout_marginLeft="@dimen/text_medium_size"
                    android:textColor="#000"
                    android:layout_marginTop="@dimen/margin_mid_extra_small"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textSize="@dimen/text_medium_size"
                    />
            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>