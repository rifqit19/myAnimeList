<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/lkjh"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/mar10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgSearch"
                android:layout_width="120dp"
                android:layout_height="150dp"
                app:riv_corner_radius_bottom_left="@dimen/mar10"
                app:riv_corner_radius_top_left="@dimen/mar10"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tittleSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textColor="#000"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/typeSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textColor="#000"
                    android:textSize="18dp"/>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/back_spin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="SCORE : "
                        android:textAlignment="center"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/scoreSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:textSize="16sp"
                        android:paddingRight="10dp"
                        android:textColor="#000"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>