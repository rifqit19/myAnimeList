<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/lkjh"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgSearch"
                android:layout_width="120dp"
                android:layout_height="150dp"
                app:riv_corner_radius_bottom_left="@dimen/margin_small"
                app:riv_corner_radius_top_left="@dimen/margin_small"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_small">

                <TextView
                    android:id="@+id/tittleSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textColor="#000"
                    android:textSize="@dimen/title_small_size"/>

                <TextView
                    android:id="@+id/typeSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textColor="#000"
                    android:textSize="@dimen/title_small_size"/>

                <LinearLayout
                    android:padding="@dimen/margin_mid_extra_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal"
                    android:background="@drawable/back_spin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="SCORE : "
                        android:textAlignment="center"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:textSize="@dimen/text_big_size"
                        android:paddingLeft="@dimen/margin_small"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/scoreSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:textSize="@dimen/text_big_size"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="#000"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>