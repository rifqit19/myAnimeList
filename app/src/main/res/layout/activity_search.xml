                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentRight="true"/>

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:spinnerMode="dropdown"
