<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.DetailSearchAnime"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/oooo">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="20dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageButton
                    android:id="@+id/back2Sa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back_white"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Detail"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFF"
                    android:fontFamily="@font/chlorinr"
                    android:textSize="18sp"/>

                <ToggleButton
                    android:id="@+id/toggleSa"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_fav"
                    android:textOn=""
                    android:textOff=""/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tittleSa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:fontFamily="@font/helvetica_neu_bold"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageSa"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:layout_margin="15dp"
                        android:scaleType="fitXY"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="type"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="12sp"
                            android:textColor="@color/oooo"/>

                        <TextView
                            android:id="@+id/typeSa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TV"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="episodes"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="12sp"
                            android:textColor="@color/oooo"/>

                        <TextView
                            android:id="@+id/episodesSa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="unknown"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="members"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="12sp"
                            android:textColor="@color/oooo"/>

                        <TextView
                            android:id="@+id/membersSa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="234343"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="16sp"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/oooo"
                                    android:text="SCORE"
                                    android:fontFamily="@font/helveticaneue_medium"
                                    android:textSize="14sp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:id="@+id/scoreSa"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/helveticaneue_medium"
                                    android:textSize="18sp"
                                    android:textColor="#000"/>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_web_orange"
                                    android:layout_alignParentBottom="true"
                                    android:id="@+id/imgw2"/>

                                <TextView
                                    android:id="@+id/webSa"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="go to Web >>"
                                    android:fontFamily="@font/helveticaneue_medium"
                                    android:textColor="@color/oooo"
                                    android:textSize="16sp"
                                    android:gravity="bottom"
                                    android:layout_alignParentBottom="true"
                                    />

                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/backorg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Synopsis"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/helvetica_neu_bold"
                        android:textColor="#FFFF"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/synopSa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textSize="14sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>