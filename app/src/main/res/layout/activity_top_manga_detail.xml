<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopManga.topMangaDetail"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/oooo">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="20dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageButton
                    android:id="@+id/back2tm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back_white"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Detail Manga"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFF"
                    android:fontFamily="@font/chlorinr"
                    android:textSize="18sp"/>

                <ToggleButton
                    android:id="@+id/toggle4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_fav"
                    android:textOn=""
                    android:textOff=""/>

                <ToggleButton
                    android:visibility="gone"
                    android:id="@+id/toggle4a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_redfav"
                    android:textOn=""
                    android:textOff=""/>

                <!--<Button-->
                    <!--android:id="@+id/btnK"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="@drawable/ic_fav"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:visibility="gone"/>-->
                <!--<Button-->
                    <!--android:id="@+id/btnK1"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="@drawable/ic_redfav"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:visibility="gone"/>-->
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tittleDtm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:fontFamily="@font/helvetica_neu_bold"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageDtm"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:layout_margin="15dp"
                        android:scaleType="fitXY"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="type"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="12sp"
                            android:textColor="@color/oooo"/>

                        <TextView
                            android:id="@+id/typeDtm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TV"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="volume"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="12sp"
                            android:textColor="@color/oooo"/>

                        <TextView
                            android:id="@+id/episodesDtm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="unknown"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="members"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="12sp"
                            android:textColor="@color/oooo"/>

                        <TextView
                            android:id="@+id/membersDtm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="234343"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="#000"
                            android:textSize="16sp"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_web_orange"
                                android:layout_alignParentBottom="true"
                                android:id="@+id/imgw6"/>

                            <TextView
                                android:id="@+id/webDtm"
                                android:layout_toRightOf="@id/imgw6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="go to Web >>"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/helveticaneue_medium"
                                android:textColor="@color/oooo"
                                android:textSize="16sp"
                                android:gravity="bottom"
                                android:layout_alignParentBottom="true"
                                />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/backorg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Synopsis"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/helvetica_neu_bold"
                        android:textColor="#FFFF"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/synopDtm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:textSize="14sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>